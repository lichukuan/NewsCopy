<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".show.ShowNewsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/back"
            android:scaleType="center"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:layout_marginStart="10dp"
            android:src="@drawable/back_gray"
            android:layout_width="20dp"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_marginStart="50dp"
            android:scaleType="center"
            android:scaleY="1.5"
            android:scaleX="1.5"
            android:src="@drawable/news_show_tou_tiao"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:src="@drawable/news_search"
            android:layout_width="20dp"
            android:layout_marginEnd="20dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:layout_height="match_parent" />
        <ImageView
            android:src="@drawable/video_more"
            android:layout_marginEnd="20dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:layout_width="20dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <com.person.newscopy.common.ShapeImageView
                    android:id="@+id/icon"
                    android:layout_width="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="40dp" />
                <TextView
                    android:id="@+id/content"
                    android:gravity="start|center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <Button
                    android:text="关注"
                    android:id="@+id/care"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/article_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recommend"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="20dp"
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:background="#fff"
        android:id="@+id/comment_view"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/comment_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:hint="写评论..."
            android:drawableStart="@drawable/news_show_write"
            android:background="@drawable/news_show_edit_bg"
            android:layout_width="0dp"
            android:paddingStart="15dp"
            android:drawablePadding="5dp"
            android:layout_marginStart="15dp"
            android:layout_height="40dp" />
    </LinearLayout>
</LinearLayout>