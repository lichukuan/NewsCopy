<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".camera.CameraActivity">
    <SurfaceView
        android:id="@+id/camera_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/camera"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:src="@drawable/camera"
        android:layout_width="35dp"
        android:layout_height="35dp" />
    <LinearLayout
        android:layout_marginBottom="50dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:drawableTop="@drawable/tiezhi"
            android:text="贴纸"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:textSize="5sp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:drawableTop="@drawable/lvjing"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:text="滤镜"
            android:textSize="5sp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="40dp" />
        <ImageView
            android:id="@+id/start"
            android:scaleType="fitXY"
            android:background="@drawable/camera_start_bg"
            android:src="@drawable/camera_start"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <TextView
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:drawableTop="@drawable/speed"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:text="变速"
            android:textSize="5sp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:drawableTop="@drawable/music"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:text="音乐"
            android:textSize="5sp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="40dp" />
    </LinearLayout>
</FrameLayout>
