<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/normal_video"
    android:layout_marginBottom="20dp"
    android:layout_height="250dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView
                android:id="@+id/video_image"
                android:scaleType="fitXY"
                android:background="@drawable/video_image_bg"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
            <TextView
                android:id="@+id/video_title"
                android:gravity="start"
                android:textColor="#fff"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal|top"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/video_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/play_num"
                android:gravity="center"
                android:textColor="#fff"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="start|bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/play_time"
                android:gravity="center"
                android:textColor="#fff"
                android:layout_gravity="end|bottom"
                android:background="@drawable/play_time_bg_final"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/video_source"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="关注"
                android:layout_marginStart="10dp"
                android:gravity="start|center_vertical"
                android:layout_weight="1"
                android:textColor="@android:color/holo_red_light" />
            <ImageView
                android:src="@drawable/video_comment"
                android:layout_width="wrap_content"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/commentCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="评论" />

            <ImageView
                android:id="@+id/video_more"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:src="@drawable/video_more" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
