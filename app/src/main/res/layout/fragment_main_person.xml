<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <TextView
                android:text="登陆"
                android:textSize="25sp"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/my_login_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="30dp">
                    <TextView
                        android:text="常用"
                        android:layout_marginStart="20dp"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <TextView
                        android:text="查看全部"
                        android:layout_marginEnd="20dp"
                        android:textSize="18sp"
                        android:id="@+id/all"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical|end"
                        android:drawableRight="@drawable/gray_to"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:drawableTop="@drawable/my_message"
                        android:drawablePadding="10dp"
                        android:text="消息通知"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="私信"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/my_private_message"
                        android:drawablePadding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <TextView
                        android:text="我的收藏"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/my_shoucang"
                        android:drawablePadding="10dp"
                        android:gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="阅读历史"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:drawableTop="@drawable/my_history"
                        android:drawablePadding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:drawableTop="@drawable/my_qianbao"
                        android:drawablePadding="10dp"
                        android:text="我的钱包"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="用户反馈"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/my_fankui"
                        android:drawablePadding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="免流量服务"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/my_liuliang"
                        android:drawablePadding="10dp"
                        android:gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="系统设置"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:drawableTop="@drawable/my_set"
                        android:drawablePadding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:text="作品管理"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:drawableTop="@drawable/my_shu"
                    android:drawablePadding="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
