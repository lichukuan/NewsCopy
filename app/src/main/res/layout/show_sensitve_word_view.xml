<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:orientation="vertical"
    android:layout_marginStart="20dp"
    android:background="@color/main_word_while"
    android:layout_marginEnd="20dp"
    android:layout_height="wrap_content">
    <TextView
        android:text="您的文章出现了如下敏感词，请删除:"
        android:layout_width="match_parent"
        android:layout_marginStart="5dp"
        android:layout_height="wrap_content"/>
    <com.person.newscopy.search.HistoryView
        android:id="@+id/key_word"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>
    <Button
        android:text="确定"
        android:id="@+id/ok"
        android:textColor="@color/main_word_while"
        android:background="@drawable/linear_graphics_bg"
        android:layout_width="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_height="30dp" />
</LinearLayout>
